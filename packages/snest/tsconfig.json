{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "outDir": "types",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "test/**/*"]
}