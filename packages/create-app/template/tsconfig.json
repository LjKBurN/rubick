{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2018",
    "module": "CommonJs",
    "declaration": true,
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "paths": {
      "@src/*": ["./src/*"],
      "@dist/*": ["./dist/*"],
      "@client/*": ["./src/client/*"],
      "@components/*": ["./src/client/components/*"], 
    }
  },
  "include": ["src"]
}